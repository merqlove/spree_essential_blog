<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Images"} unless request.xhr? %>

<% content_for :page_title do %>
  <%= t(".new_image") %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @post_image } %>

<%= form_for(@post_image, :url => admin_post_images_path(@post), :html => { :multipart => true }) do |f| %>
  <fieldset>
    <%= render :partial => 'form', :form => f %>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>

<script type="text/javascript">    
  jQuery('#cancel_link').click(function (event) { 
    jQuery('#new_image_link').show();
    jQuery('#images').html('');
  }); 
</script>

<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Categories"} unless request.xhr? %>

<% content_for :page_title do %>
  <%= t(".new_category") %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @post_category } %>

<%= form_for(@post_category, :url => admin_post_categories_path(@post)) do |f| %>
  <fieldset>
    <%= render :partial => 'form', :form => f %>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
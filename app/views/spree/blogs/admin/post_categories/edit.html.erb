<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Categories"} %>

<% content_for :page_title do %>
  <%= t(".edit_category") %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @post_category } %>

<%= form_for([:admin, @post, @post_category], :url => admin_post_category_path(@post, @post_category.id)) do |f| %>
  <fieldset>
  <%= render :partial => 'form', :form => f %>
    <%= hidden_field_tag :post_id, @post.path, :class => 'hidden' %>
  <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
